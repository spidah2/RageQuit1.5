# Environment Configuration Example
# Copia questo file a .env e configura per il tuo ambiente

# Server
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# CORS - Configura i domini permettiti
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://yourdomainhere.com

# Logging
LOG_LEVEL=info
DEBUG=false

# Performance
MAX_PLAYERS=32
PLAYER_TIMEOUT=30000
TICK_RATE=20

# Features
ENABLE_PVE_MODE=true
ENABLE_CHAT=true
ENABLE_SPECTATE=true

# SSL/HTTPS (per production)
SSL_ENABLED=false
SSL_KEY_PATH=/path/to/key.pem
SSL_CERT_PATH=/path/to/cert.pem

# Database (future)
DATABASE_URL=
DB_ENABLED=false

# Analytics (future)
ANALYTICS_ENABLED=false
ANALYTICS_KEY=
